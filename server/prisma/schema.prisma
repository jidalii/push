generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cid { 
  id    Int @id
  cid   Json
}

model Task {
  id    Int     @id @default(autoincrement())
  depositor String
  beneficiary String
  amount Float
  activity Int
  period Int
  target Float
  startTime DateTime
  endTime DateTime
  claimed Boolean
}
